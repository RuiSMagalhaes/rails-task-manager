<h1>My Tasks</h1>
<ul style="list-style: none;">
<% @tasks.each do |task| %>
  <% if task.completed == true  %>
    <li><i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %> <%= link_to "Delete task", task_path(task), method: :delete %></li>
  <%else  %>
    <li><i class="far fa-square"></i> <%= link_to task.title, task_path(task) %> <%= link_to "Delete task", task_path(task), method: :delete %></li>
  <% end  %>
<% end %>
</ul>

<%= link_to "Add a task", new_task_path %>
